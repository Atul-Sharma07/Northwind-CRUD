<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">

    <Dialog 
        id="createcreateProductDialog"
        title="Add Product"
        > 
        <form:SimpleForm>
            <Label text="ID"/>
            <Input placeholder="ID" id="createId"/>
            <Label text="Name"/>
            <Input placeholder="Name" id="createNameId"/>
            <Label text="Description"/>
            <Input placeholder="Description" id="createDescriptionId"/>
            <Label text="ReleaseDate (DD/MM/YYYY)"/>
            <Input placeholder="ReleaseDate" id="createReleaseDateId"/>
            <Label text="DiscontinuedDate (DD/MM/YYYY)"/>
            <Input placeholder="DiscontinuedDate" id="createDiscontinuedDateId"/>
            <Label text="Rating"/>
            <Input placeholder="Rating" id="createRatingId"/>
            <Label text="Price"/>
            <Input placeholder="Price" id="createPriceId"/>            
        </form:SimpleForm>
        
        <beginButton>
            <Button text="Save" press="saveCreate" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="cancleCreate" />
        </endButton>
    </Dialog>

</core:FragmentDefinition>